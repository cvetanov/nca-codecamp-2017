type Task {
    id: ID!
    name: String!
    description: String
}

type Project {
    id: ID!
    name: String!
    description: String
    tasks: [Task]
}

input TaskInput {
    name: String!
    description: String
}

type Query {
    tasks: [Task]
    projects: [Project]
}

type Mutation {
    addTask(task: TaskInput): Task
}

schema {
    query: Query
    mutation: Mutation
}
